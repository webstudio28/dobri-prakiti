    -webkit-user-drag: none;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function () {
    /* Desktop drag-to-scroll for Services carousel */
    const servicesScroller = document.querySelector('.services-scroll');
    const desktopMQ = window.matchMedia ? window.matchMedia('(min-width: 768px)') : null;
    if (servicesScroller && desktopMQ && desktopMQ.matches) {
        let dragging = false;
        let startX = 0;
        let startScrollLeft = 0;
        let activePointerId = null;

        const onPointerDown = (e) => {
            if (e.button !== 0) return; // only left click
            // Don't hijack clicks on links
            if (e.target.closest('a')) return;
            e.preventDefault(); // prevent image drag / text selection
            dragging = true;
            activePointerId = e.pointerId;
            startX = e.clientX;
            startScrollLeft = servicesScroller.scrollLeft;
            servicesScroller.classList.add('dragging');
            servicesScroller.setPointerCapture(e.pointerId);
        };

        const onPointerMove = (e) => {
            if (!dragging || e.pointerId !== activePointerId) return;
            e.preventDefault();
            const deltaX = e.clientX - startX;
            servicesScroller.scrollLeft = startScrollLeft - deltaX;
        };

        const endDrag = (e) => {
            if (e.pointerId !== activePointerId) return;
            dragging = false;
            activePointerId = null;
            servicesScroller.classList.remove('dragging');
            try { servicesScroller.releasePointerCapture(e.pointerId); } catch (_) {}
        };

        servicesScroller.addEventListener('pointerdown', onPointerDown);
        servicesScroller.addEventListener('pointermove', onPointerMove);
        servicesScroller.addEventListener('pointerup', endDrag);
        servicesScroller.addEventListener('pointercancel', endDrag);
        servicesScroller.addEventListener('pointerleave', (e) => {
            if (dragging) endDrag(e);
        });

        if (typeof desktopMQ.addEventListener === 'function') {
            desktopMQ.addEventListener('change', (ev) => {
                if (!ev.matches && dragging) {
                    dragging = false;
                    activePointerId = null;
                    servicesScroller.classList.remove('dragging');
                }
            });
        }
    }

});
</script>