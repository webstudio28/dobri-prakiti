    }
    .services-scroll::-webkit-scrollbar-track {
        background: rgba(15, 34, 58, 0.08);
        border-radius: 9999px;
    }
    .services-scroll:hover::-webkit-scrollbar-thumb {
        background: linear-gradient(90deg, rgba(31,41,55,0.9), rgba(31,41,55,0.6));
    }
    .services-scroll.dragging {
        cursor: grabbing;
    }
    .services-scroll::-webkit-scrollbar-corner {
        background: transparent;
    }
}

/* Extra: prevent image dragging in WebKit */
