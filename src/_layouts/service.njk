---
layout: base.njk
---

<!-- Hero Section -->
<section class="relative py-16 md:py-24">
  <div class="max-w-7xl mx-auto px-4 lg:px-8">
    <!-- Breadcrumb -->
    <nav class="text-gray-600 mb-6 text-sm">
      <a href="{{ '/' | url }}" class="hover:text-[#015437] transition-colors">Начало</a>
      <span class="mx-2">/</span>
      <a href="{{ '/uslugi.html' | url }}" class="hover:text-[#015437] transition-colors">Услуги</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">{{ service.serviceTitle or service.service }}</span>
    </nav>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Left: Text Content -->
      <div>
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
          {{ service.serviceTitle or service.service }}
        </h1>
        <p class="text-lg md:text-xl text-gray-700 mb-8 leading-relaxed">
          {{ service.description }}
        </p>
        
        <!-- Bullet Points -->
        {% if service.bulletPoints %}
        <div class="space-y-3 mb-8">
          {% for point in service.bulletPoints %}
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0 flex items-center justify-center w-6 h-6 rounded-full bg-[#015437] mt-1">
              <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
            </div>
            <p class="text-gray-700">{{ point }}</p>
          </div>
          {% endfor %}
        </div>
        {% endif %}
        
        <!-- CTA Button -->
        <a href="viber://chat?number=+359886118738" class="inline-block text-white px-8 py-4 rounded-3xl font-semibold text-base shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 bg-[#015437] hover:bg-[#00402a]">
          Безплатна консултация
        </a>
      </div>
      
      <!-- Right: Image -->
      <div class="hidden lg:block relative">
        <div class="relative overflow-hidden rounded-3xl shadow-2xl">
          <img src="{{ ('/' ~ service.image) | url }}" alt="{{ service.serviceTitle or service.service }}" class="w-full h-[400px] md:h-[500px] object-cover"/>
        </div>
      </div>
    </div>
  </div>
</section> 